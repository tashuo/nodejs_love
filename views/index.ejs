<% include header.ejs %>

<script type="text/javascript" src="/javascripts/socket.io.js"></script>
<script src="http://cdn.bootcss.com/jquery/2.1.4/jquery.min.js"></script>
<script type="text/javascript" src="/javascripts/moment.min.js"></script>
	<div class="container">
		<div class="rows">
			<div class="col-md-8 col-sm-8 col-xs-10 col-md-offset-2">
				<div class="login">
					<form class="form-horizontal" id="loginForm" method="post">
					  <div class="form-group">
					    <label for="username" class="col-md-3 col-sm-2 control-label">Email</label>
					    <div class="col-sm-10">
					      <input type="email" class="form-control" id="username" placeholder="Email/username">
					    </div>
					  </div>
					  <div class="form-group">
					    <label for="password" class="col-sm-2 control-label">Password</label>
					    <div class="col-sm-10">
					      <input type="password" class="form-control" id="password" placeholder="Password">
					    </div>
					  </div>
					  <div class="form-group">
					    <div class="col-sm-offset-2 col-sm-10">
					      <div class="checkbox">
					        <label>
					          <input type="checkbox" name="remember"> Remember me
					        </label>
					      </div>
					    </div>
					  </div>
					  <div class="form-group">
					    <div class="col-sm-offset-2 col-sm-10">
					      <button type="submit" id="smtBtn" class="btn btn-default">Sign in</button>
					    </div>
					  </div>
					</form>
				</div>
			</div>
		</div>
	</div>


	<script type="text/javascript">
		$('#smtBtn').click(function(){
			$.post('/user/login',{name: $('#username').val(), password: $('#password').val(), },function(responce){
				console.log('hehe: '+responce);
				if(responce){
					window.location.href="/chat";
				}else{
					alert('用户名不存在');
				}
			});
			return false;
		});
	</script>

